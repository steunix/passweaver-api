{
  "$id": "system_config",
  "type": "object",
  "properties": {
    "master_key_file" : { "type": "string" },
    "jwt_duration" : { "type": "string" },
    "listen": {
      "type": "object",
      "properties": {
        "port": { "type": "integer", "minimum": 0, "maximum": 65535 },
        "host": { "type": "string" }
      }
    },
    "log": {
      "type": "object",
      "properties": {
        "dir": { "type": "string" },
        "rotation": { "type": "string" },
        "retention": { "type": "integer", "minimum": 1 }
      },
      "required": [ "dir", "rotation", "retention" ]
    },
    "ldap": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "baseDn": { "type": "array" },
        "userDn": { "type": "string" },
        "bindDn": { "type": "string" },
        "bindPassword": { "type": "string" },
        "tlsOptions": {
          "type": "object",
          "properties": {
            "cert": { "type": "string" },
            "ca": { "type": "string" },
            "ciphers": { "type": "string" }
          }
        }
      },
      "dependencies": {
        "url": [ "port", "baseDn", "userDn", "bindDn", "bindPassword" ]
      }
    },
    "https": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "certificate": { "type": "string" },
        "private_key": { "type": "string" },
        "hsts": { "type": "boolean" }
      },
      "required": [ "enabled" ]
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "url": { "type": "string" }
      },
      "required": [ "enabled" ]
    },
    "onetimetokens": {
      "type": "object",
      "properties": {
        "max_hours": { "type": "integer", "minimum": 1 }
      },
      "required": [ "max_hours" ]
    },
    "crypto": {
      "type": "object",
      "properties": {
        "personal_key_pbkdf2_iterations": { "type": "integer", "minimum": 1 }
      },
      "required": [ "personal_key_pbkdf2_iterations" ]
    },
    "readonly": { "type": "boolean" },
    "enable_metrics": { "type": "boolean" },
    "generated_password_length": { "type": "integer", "minimum": 10, "maximum": 50 }
  },
  "required": ["jwt_duration", "listen", "log", "https", "redis", "onetimetokens", "readonly", "crypto"]
}