// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("PASSWEAVERAPI_PRISMA_URL")
}

// Folders
model folders {
  id          String   @id
  parent      String?
  description String
  personal    Boolean  @default(false)
  userid      String?
  createdat   DateTime @default(now())
  updatedat   DateTime @updatedAt

  items       items[]
  permissions folderspermissions[]
  users       users[]

  @@index([parent])
  @@index([userid])
}

model groups {
  id          String   @id
  description String
  parent      String?
  createdat   DateTime @default(now())
  updatedat   DateTime @updatedAt

  users   groupsmembers[]
  folders folderspermissions[]

  @@index([parent])
}

model users {
  id              String   @id
  login           String
  lastname        String
  firstname       String?
  authmethod      String
  locale          String
  email           String
  secret          String
  secretexpiresat DateTime
  personalsecret  String?
  personalkey     String?
  active          Boolean  @default(true)
  createdat       DateTime @default(now())
  updatedat       DateTime @updatedAt

  groups  groupsmembers[]
  folders folders[]
  settings usersettings[]
  fav        itemsfav[]

  @@unique([login])
}

model usersdeleted {
  id              String   @id
  login           String
  lastname        String
  firstname       String?
  authmethod      String
  locale          String
  email           String
  secret          String
  secretexpiresat DateTime
  personalsecret  String?
  personalkey     String?
  active          Boolean  @default(true)
  createdat       DateTime @default(now())
  updatedat       DateTime @updatedAt
}

model usersettings {
  id              String   @id @db.Uuid @default(uuid(7))
  userid          String
  setting         String
  value           String

  user  users     @relation(fields: [userid], references: [id], onUpdate: Cascade, onDelete: Restrict )
}

model groupsmembers {
  id        String   @id @db.Uuid @default(uuid(7))
  userid    String
  groupid   String
  createdat DateTime @default(now())
  updatedat DateTime @updatedAt

  users  users  @relation(fields: [userid], references: [id], onUpdate: Cascade, onDelete: Restrict )
  groups groups @relation(fields: [groupid], references: [id], onUpdate: Cascade, onDelete: Restrict )

  @@index([userid])
  @@index([groupid])
}

model folderspermissions {
  id        String   @id @db.Uuid @default(uuid(7))
  folderid  String
  groupid   String
  read      Boolean
  write     Boolean
  createdat DateTime @default(now())
  updatedat DateTime @updatedAt

  folders folders @relation(fields: [folderid], references: [id], onUpdate: Cascade, onDelete: Restrict )
  groups  groups  @relation(fields: [groupid], references: [id], onUpdate: Cascade, onDelete: Restrict )

  @@index([folderid])
  @@index([groupid])
}

model items {
  id          String    @id
  folderid    String
  personal    Boolean   @default(false)
  type        String?   @db.Uuid
  title       String
  data        String
  dataiv      String
  dataauthtag String
  algo        String?
  metadata    String?
  createdat   DateTime  @default(now())
  updatedat   DateTime  @updatedAt
  accessedat  DateTime?

  folder   folders    @relation(fields: [folderid], references: [id], onUpdate: Cascade, onDelete: Restrict )
  itemtype itemtypes? @relation(fields: [type], references: [id], onUpdate: Cascade, onDelete: Restrict )

  fav      itemsfav[]
  fts      itemsfts[]

  @@index([folderid])
}

model itemsfts {
  id          String    @id
  fts_vectorfull  Unsupported("tsvector")?
  fts_vectoritem  Unsupported("tsvector")?

  item   items @relation(fields: [id], references: [id], onUpdate: Cascade, onDelete: Restrict )
}

model itemsfav {
  id          String @id @db.Uuid @default(uuid(7))
  userid      String
  itemid      String
  createdat   DateTime @default(now())

  item items @relation(fields: [itemid], references: [id], onUpdate: Cascade, onDelete: Restrict )
  user users @relation(fields: [userid], references: [id], onUpdate: Cascade, onDelete: Restrict )

  @@index([userid])
  @@index([itemid])
}

model itemsdeleted {
  id          String    @id
  folderid    String
  personal    Boolean   @default(false)
  type        String?
  title       String
  data        String
  dataiv      String
  dataauthtag String
  algo        String?
  metadata    String?
  createdat   DateTime
  updatedat   DateTime  @updatedAt
  deletedat   DateTime  @default(now())
  accessedat  DateTime?
}

model itemtypes {
  id          String   @id @db.Uuid @default(uuid(7))
  description String
  icon        String?
  createdat   DateTime @default(now())
  updatedat   DateTime @updatedAt
  items       items[]
}

model onetimetokens {
  id          String   @id @db.Uuid @default(uuid(7))
  token       String
  type        Int? @default(0)
  expiresat   DateTime
  scope       Int? @default(0)
  userid      String?

  data        String?
  dataiv      String?
  dataauthtag String?
  itemid      String?

  createdat   DateTime  @default(now())
  updatedat   DateTime  @updatedAt

  @@unique([token])
}

model events {
  id        String   @id @db.Uuid @default(uuid(7))
  timestamp DateTime @default(now())
  action    Int
  entity    Int
  entityid1 String
  entityid2 String?
  user      String?
  note      String?

  @@index([timestamp])
  @@index([entityid1])
  @@index([user])
}
